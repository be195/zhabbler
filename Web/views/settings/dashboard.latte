<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/css/main.css">
    <link rel="stylesheet" href="/static/player/css/player.css">
    <link rel="stylesheet" href="/static/audioplayer/css/audioplayer.css">
    <link rel="shortcut icon" href="/static/images/icon.png" type="image/png">
    <link rel="stylesheet" href="/static/node_modules/boxicons/css/boxicons.min.css">
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/static/images/icons/icon-512x512.png" />
    <meta name="apple-mobile-web-app-status-bar" content="#13b522" />
    <meta name="theme-color" content="#13b522" />
    <title>Жабблер</title>
</head>
<body>
    <div id="app">
        <div class="popup popup_do_not_close" id="JS_Loader">
            <div class="loader loader_cpa"><div class="loader_part loader_part_1"></div><div class="loader_part loader_part_2"></div><div class="loader_part loader_part_3"></div></div>
        </div>
        <style>
            .nav_options .nav_options_tab[href="/settings/dashboard"]{
                background-color: rgba(255, 255, 255, .2)!important;
                text-decoration: none;
            }
        </style>
        {include '../includes/navbar_top.latte'}
        <div class="container">
            {include '../includes/navbar.latte'}
            <main class="main">
                <div class="settings_main">
                    <div class="tabs only_mobile_flex">
                        <a class="tab" href="/settings/account">
                            {$language['account']}
                        </a>
                        <a class="tab" href="/settings/profile">
                            {$language['profile']}
                        </a>
                        <a class="tab tab_active" href="/settings/dashboard">
                            {$language['dashboard']}
                        </a>
                        <a class="tab" href="javascript:void(zhabbler.chooseLanguage());">
                            {$language['info']['flag']}
                        </a>
                        <a class="tab" href="javascript:void(zhabbler.destroySession());">
                            {$language['logout']}
                        </a>
                    </div>
                    <div class="settings_main_title">
                        <span>{$language['dashboard_settings']}</span>
                    </div>
                    <div>
                        <section class="settings_section navbar_settings_styles">
                            <div class="settings_section_title">
                                <span>{$language['navbar_settings']}</span>
                            </div>
                            <div class="settings_section_content">
                                <input type="radio" id="design_ntv_f" name="design_ntv" value="0" hidden {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationNavbarStyle != 1 ? "checked" : "")}>
                                <label class="choose_navbar_st" for="design_ntv_f">
                                    <img src="/static/images/settings/sidebar.png">
                                </label>
                                <input type="radio" id="design_ntv_t" name="design_ntv" hidden value="1" {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationNavbarStyle == 1 ? "checked" : "")}>
                                <label class="choose_navbar_st" style="margin-left: 10px;" for="design_ntv_t">
                                    <img src="/static/images/settings/top_navbar.png">
                                </label>
                            </div>
                        </section>
                    </div>
                    <form method="post" data-reload="1" action="/api/Personalization/change_color_pallete">
                        <section class="settings_section">
                            <div class="settings_section_title">
                                <span>{$language['color_pallete']}</span>
                            </div>
                            <div class="settings_section_content">
                                <select name="color_pallete" class="input">
                                    <option value="none">{$language['true_green']}</option>
                                    <option value="ghost" {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationPallete == "ghost" ? "selected" : "")}>{$language['ghost']}</option>
                                    <option value="classic" {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationPallete == "classic" ? "selected" : "")}>{$language['classic']}</option>
                                    <option value="black" {((new Web\Models\Personalization())->get_personalization_config($user->userID)->personalizationPallete == "black" ? "selected" : "")}>{$language['dark']}</option>
                                </select>
                            </div>
                        </section>
                        <section class="settings_section">
                            <div class="settings_section_title"></div>
                            <div class="settings_section_content">
                                <button class="button" type="submit">{$language['save']}</button>
                            </div>
                        </section>
                    </form>
                </div>
            </main>
            {include '../includes/nav_options_settings.latte'}
        </div>
        <preloader src="/static/js/settings.js"></preloader>
        <preloader src="/static/js/new_messenger.js"></preloader>
        <preloader src="/static/player/js/zhabblerplayer.js"></preloader>
        <preloader src="/static/audioplayer/js/audioplayer.js"></preloader>
    </div>
    <script src="/static/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/static/node_modules/jquery-ui/dist/jquery-ui.min.js"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>